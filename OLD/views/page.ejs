<html lang="en">
  <head>
    <title><%=title%></title>
    <% include imports/head %>
  </head>
  <body>
    <% include imports/navbar %>
    <div class="flexDirectionColumn" style="display: flex; padding-top: 17vh; margin-inline: 5%; width: 90%; min-height: 40%; margin-bottom: 3vh">
      <div class="width100 maxWidth100" style="width: 75%; display: flex; flex-direction: column">
        <div style="text-align: left">
          <a class="font-12" style="font-weight: 600; font-size: 2.7vh; border-radius: 0.4vh; padding-left: 1.5vh;"><%=name%></a>
          <div style="display: flex;">
            <div style="margin-left: 1.7vh; margin-top: 1.5vh; background: linear-gradient(to right,rgba(255, 0, 0, 1) 0%,rgba(0, 0, 0, 0) 100%); width: 12%; height: 0.15vh;"></div>
          </div>
        </div>
        <div id="animes" style="margin-top: 3vh; display: flex; justify-content: center; flex-flow: wrap;">
          <div style="position: relative; width: 100%; height: 30vh">
            <div style="position: absolute; top: 30%; left: 50%; margin-top: -2vh; margin-left: -2vh">
              <div class="loader-wheel"></div>
              <div class="loader-text font-5"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="width100 maxWidth100 invisibleAndroid" style="width: 25%; overflow: hidden  flex-direction: column">
        <div class="marginLeft0" style="margin-top: 6vh; margin-left: 10%">
          <a class="font-12" style="margin-left: 1%; font-weight: 600; font-size: 2.7vh; border-radius: 0.4vh; padding-left: 1.5vh;">Populares</a>
          <div style="margin-bottom: 2vh; margin-left: 1.7vh; margin-top: 1.5vh; background: linear-gradient(to right,rgba(255, 0, 0, 1) 0%,rgba(0, 0, 0, 0) 100%); width: 20%; height: 0.16vh;"></div>
          <div id="tops">
            <div id="loadPopulares" style="position: relative; min-height: 10vh; width: 100%;">
              <div style="position: absolute; top: 50%; left: 50%; margin-top: -2vh; margin-left: -2vh">
                <div class="loader-wheel"></div>
                <div class="loader-text font-5"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="pages" style="margin-bottom: 3vh; text-align: center"></div>
    <% include imports/footer %>
  </body>
</html>
<script src="/js/page.js"></script>